  <script>
    const selector = document.getElementById("langSelector");
    const titles = {
      en: "Tesfaye Girma Alemayehu | Portfolio",
      om: "Tesfaye Girma Alemayehu | Paartii Isaa",
      am: "ቴስፋዬ ግርማ አለማየሁ | ፖርትፎሊዮ"
    };

    selector.addEventListener("change", function () {
      const lang = this.value;
      document.title = titles[lang];
      document.querySelectorAll("[data-en]").forEach(el => {
        el.innerText = el.getAttribute(`data-${lang}`);
      });
    });

    document.getElementById("contact-form").addEventListener("submit", function (e) {
      e.preventDefault();
      alert("Message submitted! I will get back to you shortly.");
    });

    document.getElementById("booking-form").addEventListener("submit", function (e) {
      e.preventDefault();
      alert("Booking submitted! I will contact you for confirmation.");
    });
  </script>
